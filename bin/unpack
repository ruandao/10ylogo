#!/bin/bash

from=$1
to=$2

doX() {
	source=$1
	target=$2
	bname=$(basename "$source")
	dname=$(dirname "$source")
	echo source: $source
	echo target: $target
	echo dname: $dname
	echo bname: $bname
}
export -f doX

echo $from
mkdir -p $to
cd $to

find $from | xargs -I {} bash -c "doX '{}' '${to}{}'"
